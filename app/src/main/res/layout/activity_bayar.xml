<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3c5bc1"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context="com.example.aprianto.quickcashier.BayarActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp "
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/tvTtl"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#3c5bc1"
            android:inputType="numberDecimal"
            android:textColor="@android:color/white"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp "
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/tb0"
            android:background="#3c5bc1"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="20dp"
            android:inputType="numberDecimal"/>

    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="4dp"
            android:orientation="vertical">

            <Button
                android:layout_weight="5"
                android:textColor="#3c5bc1"
                android:background="@drawable/u100000"
                android:onClick="bt1"
                android:id="@+id/tb1"
                android:layout_width="170dp"
                android:layout_height="50dp"
                android:textSize="20sp" />

            <Button
                android:layout_weight="5"
                android:textColor="#3c5bc1"
                android:background="@drawable/u20000"
                android:layout_marginTop="5dp"
                android:onClick="bt3"
                android:id="@+id/tb3"
                android:layout_width="170dp"
                android:layout_height="50dp"
                android:textSize="20sp" />

            <Button
                android:layout_weight="5"
                android:textColor="#3c5bc1"
                android:layout_marginTop="5dp"
                android:background="@drawable/u5000"
                android:onClick="bt5"
                android:id="@+id/tb5"
                android:layout_width="170dp"
                android:layout_height="50dp"
                android:textSize="20sp" />

            <Button
                android:layout_weight="5"
                android:textColor="#3c5bc1"
                android:layout_marginTop="5dp"
                android:background="@drawable/u1000"
                android:onClick="bt7"
                android:id="@+id/tb7"
                android:layout_width="170dp"
                android:layout_height="50dp"
                android:textSize="20sp" />

            <Button
                android:layout_weight="5"
                android:textColor="#3c5bc1"
                android:layout_marginTop="5dp"
                android:background="@android:color/white"
                android:onClick="bt9"
                android:id="@+id/tb9"
                android:layout_width="170dp"
                android:layout_height="50dp"
                android:textSize="20sp"
                android:text="Rp 200" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="4dp">

            <Button
                android:layout_weight="5"
                android:textColor="#3c5bc1"
                android:background="@drawable/u50000"
                android:onClick="bt2"
                android:id="@+id/tb2"
                android:layout_width="170dp"
                android:layout_height="50dp"
                android:textSize="20sp" />

            <Button
                android:layout_weight="5"
                android:textColor="#3c5bc1"
                android:layout_marginTop="5dp"
                android:background="@drawable/u10000"
                android:onClick="bt4"
                android:id="@+id/tb4"
                android:layout_width="170dp"
                android:layout_height="50dp"
                android:textSize="20sp" />

            <Button
                android:layout_weight="5"
                android:id="@+id/tb6"
                android:layout_width="170dp"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/u2000"
                android:onClick="bt6"
                android:textColor="#3c5bc1"
                android:textSize="20sp" />

            <Button
                android:layout_weight="5"
                android:id="@+id/tb8"
                android:layout_width="170dp"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@android:color/white"
                android:onClick="bt8"
                android:text="Rp 500"
                android:textColor="#3c5bc1"
                android:textSize="20sp" />

            <Button
                android:layout_weight="5"
                android:id="@+id/tb10"
                android:layout_width="170dp"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@android:color/white"
                android:onClick="bt10"
                android:text="Rp 100"
                android:textColor="#3c5bc1"
                android:textSize="20sp" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:textColor="#3c5bc1"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nota"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginRight="4dp"
        android:layout_marginLeft="4dp"/>




</LinearLayout>
