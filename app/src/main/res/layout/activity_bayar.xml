<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3c5bc1"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context="com.example.aprianto.quickcashier.BayarActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:background="#3c5bc1"
        android:orientation="vertical">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvTtl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/tb0"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_horizontal"
                android:inputType="numberDecimal"
                android:textColor="@android:color/white"
                android:textSize="25sp"
                android:textStyle="bold" />

            <ImageView
                android:paddingLeft="300dp"
                android:id="@+id/ivClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_close" />


        </android.support.constraint.ConstraintLayout>


    </LinearLayout>

    <Button
        android:onClick="bt1"
        android:id="@+id/tb1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:background="@drawable/u100000" />

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3c5bc1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="4dp"
            android:orientation="vertical">

            <Button
                android:layout_weight="5"
                android:textColor="#3c5bc1"
                android:background="@drawable/u50000"
                android:onClick="bt2"
                android:id="@+id/tb2"
                android:layout_width="165dp"
                android:layout_height="50dp"
                android:textSize="20sp" />

            <Button
                android:layout_weight="5"
                android:textColor="#3c5bc1"
                android:background="@drawable/u10000"
                android:layout_marginTop="5dp"
                android:onClick="bt4"
                android:id="@+id/tb4"
                android:layout_width="165dp"
                android:layout_height="50dp"
                android:textSize="20sp" />

            <Button
                android:layout_weight="5"
                android:textColor="#3c5bc1"
                android:layout_marginTop="5dp"
                android:background="@drawable/u2000"
                android:onClick="bt6"
                android:id="@+id/tb6"
                android:layout_width="165dp"
                android:layout_height="50dp"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="4dp">

            <Button
                android:layout_weight="5"
                android:textColor="#3c5bc1"
                android:background="@drawable/u20000"
                android:onClick="bt3"
                android:id="@+id/tb3"
                android:layout_width="165dp"
                android:layout_height="50dp"
                android:textSize="20sp" />

            <Button
                android:layout_weight="5"
                android:textColor="#3c5bc1"
                android:layout_marginTop="5dp"
                android:background="@drawable/u5000"
                android:onClick="bt5"
                android:id="@+id/tb5"
                android:layout_width="165dp"
                android:layout_height="50dp"
                android:textSize="20sp" />

            <Button
                android:layout_weight="5"
                android:onClick="bt7"
                android:id="@+id/tb7"
                android:layout_width="165dp"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/u1000"
                android:textColor="#3c5bc1"
                android:textSize="20sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingRight="2dp"
        android:paddingLeft="2dp"
        android:paddingBottom="2dp"
        android:background="#3c5bc1"
        android:orientation="horizontal">

        <Button
            android:onClick="bt8"
            android:id="@+id/tb8"
            android:background="@drawable/u500"
            android:layout_weight="3"
            android:textColor="#3c5bc1"
            android:layout_marginTop="5dp"
            android:layout_marginRight="4dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textSize="20sp" />

        <Button
            android:background="@drawable/u200"
            android:layout_weight="3"
            android:textColor="#3c5bc1"
            android:layout_marginTop="5dp"
            android:layout_marginRight="4dp"
            android:onClick="bt9"
            android:id="@+id/tb9"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textSize="20sp" />

        <Button
            android:background="@drawable/u100"
            android:layout_weight="3"
            android:textColor="#3c5bc1"
            android:layout_marginTop="5dp"
            android:onClick="bt10"
            android:id="@+id/tb10"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textSize="20sp" />

    </LinearLayout>

    <Button
        android:onClick="Nota"
        android:id="@+id/btNota"
        android:layout_marginTop="4dp"
        android:textColor="#3c5bc1"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Nota"
        android:textSize="20sp"
        android:textStyle="bold" />

</LinearLayout>
